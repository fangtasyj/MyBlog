<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.blog.dao.LinkMapper">
	<resultMap type="Link" id="LinkResult">
		<result property="id" column="id"/>
		<result property="linkName" column="linkName"/>
		<result property="linkUrl" column="linkUrl"/>
		<result property="orderNo" column="orderNo"/>
	</resultMap>
	
	<select id="getLinkById" parameterType="Integer" resultMap="LinkResult">
		select * from t_link where id=#{id}
	</select>
	
	<select id="getAllLink" parameterType="Map" resultMap="LinkResult">
		select * from t_link order by orderNo
		<if test="pageStart!=null and pageSize!=null">
			limit #{pageStart},#{pageSize}
		</if>		
	</select>
	
	<select id="getLinkTotal" resultType="Long">
		select count(*) from t_link
	</select>
	
	<insert id="insertLink" parameterType="Link">
		insert into t_link(linkName,linkUrl,orderNo) values(#{linkName},#{linkUrl},#{orderNo})
	</insert>
	
	<update id="updateLink" parameterType="Link">
		update t_link
		<set>
			<if test="linkName!=null and linkName!=''">
				linkName=#{linkName},
			</if>
			<if test="linkUrl!=null and linkUrl!=''">
				linkUrl=#{linkUrl},
			</if>
			<if test="orderNo!=null">
				orderNo=#{orderNo},
			</if>	
		</set>
		where id=#{id}
	</update>
	
	<delete id="deleteLinkById" parameterType="Integer">
		delete from t_link where id=#{id}
	</delete>


</mapper>